#Now, calculate the mean for 'meantempi' for the days that are Saturdays or Sundays (weekend):

import pandas as pd
from datetime import datetime

def avg_weekend_temperature(filename):
    df = pd.read_csv(filename,sep=",")
    count = 0
    total_meantempi = 0.0
    for index, row in df.iterrows() :
        date = row["DATEn"]
        is_weekend = datetime.strptime(date,'%Y-%m-%d').weekday()
        
        if is_weekend == 5 or is_weekend == 6 :
            count += 1
            total_meantempi += row["meantempi"]
            
    mean_temp_weekends = total_meantempi / count 
    
    return mean_temp_weekends

filename = "turnstile_data_master_with_weather.csv"
mean_temp_weekend = avg_weekend_temperature(filename)
